<?xml version="1.0" encoding="utf-8"?>
<rotate
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360">

    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="7"
        android:useLevel="false">
        <gradient
            android:startColor="@color/md_theme_light_onTertiaryContainer"
            android:endColor="@color/md_theme_dark_onTertiaryContainer"
            android:type="linear"
            android:useLevel="false"/>
    </shape>

</rotate>